{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES5",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "include": ["./src/**/*"]
}
